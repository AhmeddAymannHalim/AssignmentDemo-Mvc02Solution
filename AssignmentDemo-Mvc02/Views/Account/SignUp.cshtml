
@{
    ViewData["Title"] = "SignUp";
    Layout = "_AuthLayout";
}

<h1 class="text-center h4 mt-5">Sign Up To Join Family</h1>
<form class="mx-auto w-50 ">

    <label for="email" class="form-label">Email</label>
    <input placeholder="Enter Your Email.." name="email" class="form-control my-2" />

    <label for="password" class="form-label">Password</label>
    <input placeholder="Enter Your Password.." name="password" type="password" class="form-control my-2" />

    <button type="submit" class="btn btn-outline-danger mt-4">Sign Up</button>

    <a href="/Account/SignIn" class="btn btn-outline-warning mt-4 ms-1">Sign In Now ....</a>
</form>