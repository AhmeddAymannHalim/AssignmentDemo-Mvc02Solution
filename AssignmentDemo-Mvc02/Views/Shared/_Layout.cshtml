<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    @* Start Header *@
    <div class="text-center mt-5">
        <a class="btn btn-outline-primary" href="/Home/Index">Home</a>
        <a class="btn btn-outline-warning" href="/Home/AboutUs">AboutUs</a>
        <a class="btn btn-outline-success" href="/Home/Privacy">Privacy</a>
        <a class="btn btn-outline-dark text-black" href="/Home/ContactUs">Contact Us</a>
        <br/>
        
        <a class="btn btn-outline-info my-2" href="/Account/SignIn">SignIn</a>
        <a class="btn btn-outline-danger" href="/Account/SignUp">SignUp</a>

    </div>
    @* End Header *@

    @* ----------------------------------------- *@



    <div>
        @RenderBody()
    </div>


    @* ----------------------------------------- *@
    @* Start Footer *@
    <footer class="text-center mt-5">
        <center>
            <div class="mt-5">
                <p>CopyRights &copy; Route @DateTime.Now.Year</p>

            </div>
        </center>
    </footer>

    @* End Footer *@

</body>
</html>
