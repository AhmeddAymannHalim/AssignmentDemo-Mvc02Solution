
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

    @* Html Tag *@
    @* <a href="/Home/Index" class="btn btn-primary">Home</a> *@

    @* Html Helpers *@
    @* @Html.ActionLink("Home","Index","Home",null,new{@class = "btn btn-success"}) *@

    @* Tag Helpers *@
    
    @* <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a> *@


    @* Start Header *@
    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Home" class="btn btn-outline-primary" >Home</a>
        <a asp-controller="Home" asp-action="AboutUs" class="btn btn-outline-warning" >AboutUs</a>
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-success" >Privacy</a>
        <a asp-controller="Home" asp-action="ContactUs" class="btn btn-outline-dark text-black" >Contact Us</a>
        <br/>
        
        <a asp-controller="Account" asp-action="SignIn" class="btn btn-outline-info my-2" >SignIn</a>
        <a asp-controller="Account" asp-action="SignUp" class="btn btn-outline-danger" >SignUp</a>

    </div>
    @* End Header *@

    @* ----------------------------------------- *@



    <div>
        @RenderBody()
    </div>


    @* ----------------------------------------- *@
    @* Start Footer *@
    <footer class="text-center mt-5">
        <center>
            <div class="mt-5">
                <p>CopyRights &copy; Route @DateTime.Now.Year</p>

            </div>
        </center>
    </footer>

    @* End Footer *@

</body>
</html>
